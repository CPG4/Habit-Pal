<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/changepassword_screen_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/changepassword_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".activities.MainActivity">

        <TextView
            android:id="@+id/text_currentpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:fontFamily="cursive"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:shadowColor="@color/colorShadow"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/current_password"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.group4.habitpal.custom_views.CustomEditTextContainer
            android:id="@+id/currentpassword_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="@id/text_currentpassword"
            app:layout_constraintStart_toStartOf="@id/text_currentpassword"
            app:layout_constraintTop_toBottomOf="@id/text_currentpassword">

            <EditText
                android:id="@+id/field_currentpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:fontFamily="@font/nova_round"
                android:hint="@string/current_password"
                android:inputType="textPassword"
                android:letterSpacing="0.05"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.group4.habitpal.custom_views.CustomEditTextContainer>

        <TextView
            android:id="@+id/text_newpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="cursive"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:shadowColor="@color/colorShadow"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/new_password"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/text_currentpassword"
            app:layout_constraintRight_toRightOf="@id/text_currentpassword"
            app:layout_constraintTop_toBottomOf="@id/currentpassword_container" />

        <com.group4.habitpal.custom_views.CustomEditTextContainer
            android:id="@+id/newpassword_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="@id/text_currentpassword"
            app:layout_constraintStart_toStartOf="@id/text_currentpassword"
            app:layout_constraintTop_toBottomOf="@id/text_newpassword">

            <EditText
                android:id="@+id/field_newpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:fontFamily="@font/nova_round"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:letterSpacing="0.05"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.group4.habitpal.custom_views.CustomEditTextContainer>

        <TextView
            android:id="@+id/text_newpasswordagain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="cursive"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:shadowColor="@color/colorShadow"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/new_password_again"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/text_currentpassword"
            app:layout_constraintRight_toRightOf="@id/text_currentpassword"
            app:layout_constraintTop_toBottomOf="@id/newpassword_container" />

        <com.group4.habitpal.custom_views.CustomEditTextContainer
            android:id="@+id/newpasswordagain_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="@id/text_currentpassword"
            app:layout_constraintStart_toStartOf="@id/text_currentpassword"
            app:layout_constraintTop_toBottomOf="@id/text_newpasswordagain">

            <EditText
                android:id="@+id/field_newpasswordagain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:fontFamily="@font/nova_round"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:letterSpacing="0.05"
                android:maxLength="10"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.group4.habitpal.custom_views.CustomEditTextContainer>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_changepassword_bg"
            android:layout_width="0dp"
            android:layout_height="@dimen/_57sdp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorAccentDark"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="@id/changepassword_btn_changepassword"
            app:layout_constraintStart_toStartOf="@id/changepassword_btn_changepassword"
            app:layout_constraintTop_toTopOf="@id/changepassword_btn_changepassword">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/nova_round"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="@string/change_password"
                android:textAlignment="gravity"
                android:textAllCaps="true"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <com.group4.habitpal.custom_views.CustomAppButton
            android:id="@+id/changepassword_btn_changepassword"
            android:layout_width="0dp"
            android:layout_height="@dimen/_57sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:tag="@string/change_password"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/text_currentpassword"
            app:layout_constraintStart_toStartOf="@id/text_currentpassword"
            app:layout_constraintTop_toBottomOf="@id/newpasswordagain_container">

            <TextView
                android:id="@+id/text_applychanges"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/nova_round"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="@string/change_password"
                android:textAlignment="gravity"
                android:textAllCaps="true"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.group4.habitpal.custom_views.CustomAppButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>