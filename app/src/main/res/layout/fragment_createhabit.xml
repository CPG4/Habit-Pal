<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="32dp"
        android:fontFamily="cursive"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/email_container"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#EDEDED"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="@id/text_description"
        app:layout_constraintStart_toStartOf="@id/text_description"
        app:layout_constraintTop_toBottomOf="@id/text_description">

        <EditText
            android:id="@+id/field_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nova_round"
            android:gravity="start"
            android:hint="Describe the habit"
            android:inputType="textEmailAddress"
            android:letterSpacing="0.05"
            android:padding="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="cursive"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Type"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/text_description"
        app:layout_constraintRight_toRightOf="@id/text_description"
        app:layout_constraintTop_toBottomOf="@+id/email_container" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_form"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="@+id/text_type"
        app:layout_constraintTop_toBottomOf="@id/text_type">

        <TextView
            android:id="@+id/text_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nova_round"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Form"
            android:textAllCaps="true"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_quit"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#0082C22E"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/text_type"
        app:layout_constraintTop_toBottomOf="@id/text_type">

        <TextView
            android:id="@+id/text_quit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nova_round"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Quit"
            android:textAllCaps="true"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/colorAccentSecondary"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="@id/text_description"
        app:layout_constraintStart_toStartOf="@id/text_description"
        app:layout_constraintTop_toBottomOf="@id/btn_form">

        <TextView
            android:id="@+id/text_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/nova_round"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Add Habit"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>